# Exercício 08) 

nota = float(input("Digite sua nota: "))

if nota >= 90:
    print('A')
elif nota >= 80:
    print('B')
elif nota >= 70:
    print('C')
elif nota >= 60:
    print('D')
elif nota >=50:
    print('E')
else:
    print('F')

# Exercício 09)

numero = int(input("Digite um numero: "))
if numero > 0:
    print("positivo")
elif numero < 0:
    print("negativo")
else:
    print("zero")

    
 #    Exercício 10) 
num1 = int(input("insira o primeiro numero: "))
num2 = int(input("insira o segundo numero: "))
operador = str(input("Escolha um dos operadores +, -, x ou ÷: "))

if operador == "+":
    print( num1 + num2)
elif operador == "-":
    print(num1 - num2)
elif operador == "x" :
    print(num1 * num2)
elif operador == "÷":
    if num2 == 0 or num1 == 0:
        print("Não é possível dividir número por zero")
    else:
        print(num1/num2)

#    Exercício 11) 
    
idade = int(input("Insira sua idade: "))
 
if idade < 16:
     print("Voce é menor não pode votar nem dirigir")
elif idade >= 16 and idade < 18:
    print(" Voce pode votar mas não pode dirigir")
elif idade >= 18:
    print("Voce pode votar e dirigir")


