#    Exercício 13)

nota = float(input("Digite a nota do aluno: "))

if nota >= 7:
    print("Aprovado")
elif nota < 7 and nota >=5:
    print("Recuperação")
else:
    print("Reprovado")    

#    Exercício 14)

num = int(input("Digite um número: "))

if num <= 10 and num >= 20:
    print("O numero está dentro do intervalo permitido")
else:
    print("O número não esta no intervalo")
    
     
#    Exercício 15)      
       
idade = int(input("Digite sua idade: "))
renda = float(input("Digite sua renda mensal: "))
    
if idade > 18 or renda > 3000:
     print("Poderá se cadastrar")
else:
    print("Cadastro não Permitido")
 


#    Exercício 16) 

chuva = input("se Está Chovendo escreva 'sim', caso não esteja escreva 'não': ")
raios = input("caso haja previsão de raios escreva 'sim, caso contrario 'não': ")

if chuva == "sim" and raios == "sim":
    print("Fique em casa")
if chuva == "sim" or raios == "sim":
    print("Cuidado ao sair")
else:
    print("Pode sair com segurança")




  #    Exercício 17) 

n1 = int(input("Digite o primeiro número: "))
n2 = int(input("Digite o segundo número: "))
n3 = int(input("Digite o terceiro número: "))


maior = n1
if n2 > maior:
    maior = n2
if n3 > maior:
    maior = n3


menor = n1
if n2 < menor:
    menor = n2
if n3 < menor:
    menor = n3


print(f"O maior número é: {maior}")
print(f"O menor número é: {menor}")
